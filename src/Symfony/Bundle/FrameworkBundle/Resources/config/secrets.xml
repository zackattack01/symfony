<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">           

    <services>
        <defaults public="false" />

        <service id="secrets.secret_var_processor" class="Symfony\Component\DependencyInjection\SecretVarProcessor" >
            <tag name="container.env_var_processor" priority="-992" />
        </service>

        <service id="secrets.jwe_handler" class="Symfony\Component\DependencyInjection\Secrets\JweHandler" />

        <service id="console.command.secrets_add" class="Symfony\Bundle\FrameworkBundle\Command\SecretsAddCommand">
            <argument type="service" id="secrets.jwe_handler" />
            <tag name="console.command" command="secrets:add" />
        </service>

        <service id="console.command.secrets_edit" class="Symfony\Bundle\FrameworkBundle\Command\SecretsEditCommand">
            <argument type="service" id="secrets.jwe_handler" />
            <tag name="console.command" command="secrets:edit" />
        </service>

        <service id="console.command.secrets_update_keypair" class="Symfony\Bundle\FrameworkBundle\Command\SecretsUpdateKeyPairCommand">
            <argument type="service" id="secrets.jwe_handler" />
            <tag name="console.command" command="secrets:update-keypair" />
        </service>

        <service id="console.command.secrets_init" class="Symfony\Bundle\FrameworkBundle\Command\SecretsInitCommand">
            <argument type="service" id="secrets.jwe_handler" />
            <tag name="console.command" command="secrets:init" />
        </service>
    </services>
</container>
