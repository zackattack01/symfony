<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">           
    
    <services>
        <defaults public="false" />
        
        <service id="jwe_handler" class="Symfony\Component\DependencyInjection\Secrets\JweHandler" >
            <tag name="container.jwe_handler" priority="-992" />
        </service>
        
        <service id="console.command.secrets_add" class="Symfony\Bundle\FrameworkBundle\Command\SecretsAddCommand">
            <argument type="service" id="secret_var_processor" />
            <tag name="console.command" command="secrets:add" />
        </service>

        <service id="console.command.secrets_edit" class="Symfony\Bundle\FrameworkBundle\Command\SecretsEditCommand">
            <argument type="service" id="secret_var_processor" />
            <tag name="console.command" command="secrets:edit" />
        </service>

        <service id="console.command.secrets_update_keypair" class="Symfony\Bundle\FrameworkBundle\Command\SecretsUpdateKeyPairCommand">
            <argument type="service" id="secret_var_processor" />
            <tag name="console.command" command="secrets:update-keypair" />
        </service>

    </services>
</container>